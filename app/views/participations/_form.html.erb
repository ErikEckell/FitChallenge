<% if participation.errors.any? %>
  <div class="alert alert-danger">
    <h5>Fix the following errors:</h5>
    <ul>
      <% participation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: participation, local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :user_id, "User", class: "form-label" %>
    <%= form.collection_select :user_id, User.all, :id, :name, { prompt: "Select a user" }, { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label :challenge_id, "Challenge", class: "form-label" %>
    <%= form.collection_select :challenge_id, Challenge.all, :id, :title, { prompt: "Select a challenge" }, { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, ["active", "completed", "inactive"], { prompt: "Select status" }, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", participations_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
