<div class="card shadow-sm p-4 mt-3">
  <h3 class="mb-3"><%= @exercise.new_record? ? "New Exercise" : "Edit Exercise" %></h3>

  <%= form_with(model: @exercise, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label fw-semibold" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter exercise name" %>
    </div>

    <div class="mb-3">
      <%= f.label :category, class: "form-label fw-semibold" %>
      <%= f.text_field :category, class: "form-control", placeholder: "e.g. Cardio, Strength" %>
    </div>

    <div class="mb-3">
      <%= f.label :unit, class: "form-label fw-semibold" %>
      <%= f.text_field :unit, class: "form-control", placeholder: "e.g. km, reps, minutes" %>
    </div>

    <%= f.submit (@exercise.new_record? ? "Create Exercise" : "Update Exercise"), class: "btn btn-success mt-2" %>
    <%= link_to "Back", exercises_path, class: "btn btn-secondary mt-2 ms-2" %>
  <% end %>
</div>
