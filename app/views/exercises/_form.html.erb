<% if exercise.errors.any? %>
  <div class="alert alert-danger">
    <h5>Fix the following errors:</h5>
    <ul>
      <% exercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: exercise, local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter exercise name" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control", placeholder: "Cardio, Strength, etc." %>
  </div>

  <div class="mb-3">
    <%= form.label :unit %>
    <%= form.select :unit, options_for_select(["reps", "km", "minutes"], @exercise.unit), {}, class: "form-select" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", exercises_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
