<!-- app/views/home/index.html.erb -->

<h1 class="mb-5 text-center display-4">Welcome to FitChallenge</h1>

<div class="row mb-5 justify-content-center">
  <% stats = [
      { title: "Users", count: @users_count, path: users_path, icon: "👤" },
      { title: "Challenges", count: @challenges_count, path: challenges_path, icon: "🏆" },
      { title: "Participations", count: @participations_count, path: participations_path, icon: "✅" },
      { title: "Exercises", count: @exercises_count, path: exercises_path, icon: "💪" },
      { title: "Badges", count: @badges_count, path: badges_path, icon: "🎖️" }
    ] %>

  <% stats.each do |stat| %>
    <div class="col-md-2 mb-4">
      <div class="card text-center h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <div class="mb-2 display-4"><%= stat[:icon] %></div>
          <h5 class="card-title"><%= stat[:title] %></h5>
          <p class="card-text display-6 fw-bold"><%= stat[:count] %></p>
          <%= link_to "View #{stat[:title]}", stat[:path], class: "btn btn-primary btn-sm mt-auto" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h2 class="mb-3">Latest Challenges</h2>
<table class="table table-striped table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
  </thead>
  <tbody>
    <% @latest_challenges.each do |challenge| %>
      <tr>
        <td><%= link_to challenge.title, challenge_path(challenge), class: "text-decoration-none fw-semibold" %></td>
        <td><%= challenge.creator.name %></td>
        <td><%= challenge.start_date.strftime("%b %d, %Y") %></td>
        <td><%= challenge.end_date.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="mt-5 mb-3">Latest Progress Entries</h2>
<table class="table table-striped table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>User</th>
      <th>Challenge</th>
      <th>Exercise</th>
      <th>Value</th>
      <th>Points</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @latest_progress_entries.each do |entry| %>
      <tr>
        <td><%= entry.participation.user.name %></td>
        <td><%= link_to entry.participation.challenge.title, challenge_path(entry.participation.challenge), class: "text-decoration-none" %></td>
        <td><%= entry.exercise.name %></td>
        <td><%= entry.metric_value %> <%= entry.exercise.unit %></td>
        <td><%= entry.points %></td>
        <td><%= entry.entry_date.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
