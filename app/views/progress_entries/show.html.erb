<div class="container mt-5">
  <% if @progress_entry %>
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-secondary text-white">
        <h2 class="mb-0">Progress Entry</h2>
      </div>
      <div class="card-body">
        <p><strong>User:</strong> <%= link_to @progress_entry.participation.user.name, user_path(@progress_entry.participation.user) %></p>
        <p><strong>Challenge:</strong> <%= link_to @progress_entry.participation.challenge.title, challenge_path(@progress_entry.participation.challenge) %></p>
        <p><strong>Exercise:</strong> <%= @progress_entry.exercise.name %></p>
        <p><strong>Value:</strong> <%= @progress_entry.metric_value %> <%= @progress_entry.exercise.unit %></p>
        <p><strong>Points:</strong> <%= @progress_entry.points %></p>
        <p><strong>Date:</strong> <%= @progress_entry.entry_date.strftime("%d/%m/%Y") %></p>
      </div>
    </div>
  <% else %>
    <div class="alert alert-danger">Progress Entry not found.</div>
  <% end %>
</div>
