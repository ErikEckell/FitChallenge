<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Progress Entries</h1>
    <% if current_user.participant? %>
      <%= link_to "New Progress Entry", new_progress_entry_path, class: "btn btn-success" %>
    <% end %>
  </div>

  <% if @progress_entries.any? %>
    <table class="table table-striped table-hover shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>Challenge</th>
          <th>Exercise</th>
          <th>Date</th>
          <th>Value</th>
          <th>Points</th>
          <th>Participant</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @progress_entries.each do |entry| %>
          <tr>
            <td><%= entry.participation.challenge.title %></td>
            <td><%= entry.exercise.name %></td>
            <td><%= entry.entry_date.strftime("%d/%m/%Y") %></td>
            <td><%= entry.metric_value %> <%= entry.exercise.unit %></td>
            <td><%= entry.points || "â€”" %></td>
            <td><%= entry.participation.user.name %></td>
            <td>
              <%= link_to "Show", progress_entry_path(entry), class: "btn btn-primary btn-sm" %>

              <% if current_user.admin? || current_user == entry.participation.user || current_user == entry.participation.challenge.creator %>
                <%= link_to "Edit", edit_progress_entry_path(entry), class: "btn btn-warning btn-sm" %>
                <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }, class: "btn btn-danger btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">No progress entries recorded yet.</div>
  <% end %>
</div>
