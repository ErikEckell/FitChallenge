<h1>Challenges</h1>

<% if can?(:create, Challenge) %>
  <%= link_to "New Challenge", new_challenge_path, class: "btn btn-success mb-3" %>
<% end %>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Dates</th>
      <th>Creator</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.title %></td>
        <td><%= truncate(challenge.description, length: 80) %></td>
        <td><%= challenge.start_date.strftime("%d/%m/%Y") %> - <%= challenge.end_date.strftime("%d/%m/%Y") %></td>
        <td><%= challenge.creator.present? ? challenge.creator.name : "Unknown" %></td>
        <td>
          <%= link_to "Show", challenge_path(challenge), class: "btn btn-primary btn-sm me-1" %>
          <% if current_user.admin? || challenge.creator == current_user %>
            <%= link_to "Edit", edit_challenge_path(challenge), class: "btn btn-warning btn-sm me-1" %>
            <%= button_to "Delete", challenge_path(challenge), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm me-1" %>
          <% end %>
          <% if current_user.role == "participant" && !challenge.participants.include?(current_user) %>
            <%= button_to "Join", join_challenge_path(challenge), method: :post, class: "btn btn-success btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
