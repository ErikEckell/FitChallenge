<div class="card shadow-sm p-4 mt-3">
  <h3 class="mb-3"><%= @challenge.new_record? ? "New Challenge" : "Edit Challenge" %></h3>

  <%= form_with(model: @challenge, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label fw-semibold" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter challenge title" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label fw-semibold" %>
      <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Describe the challenge" %>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :start_date, class: "form-label fw-semibold" %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :end_date, class: "form-label fw-semibold" %>
        <%= f.date_field :end_date, class: "form-control" %>
      </div>
    </div>

    <%= f.submit (@challenge.new_record? ? "Create Challenge" : "Update Challenge"), class: "btn btn-success mt-2" %>
    <%= link_to "Back", challenges_path, class: "btn btn-secondary mt-2 ms-2" %>
  <% end %>
</div>
