<% if badge.errors.any? %>
  <div class="alert alert-danger">
    <h5>Fix the following errors:</h5>
    <ul>
      <% badge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: badge, local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter badge name" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Describe the badge" %>
  </div>

  <div class="mb-3">
    <%= form.label :condition, class: "form-label" %>
    <%= form.text_field :condition, class: "form-control", placeholder: "Condition to unlock (e.g., total_distance >= 1 km)" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", badges_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
