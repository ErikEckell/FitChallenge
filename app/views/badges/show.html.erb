<div class="container mt-5">
  <% if @badge %>
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-dark text-white">
        <h2 class="mb-0"><%= @badge.name %></h2>
      </div>
      <div class="card-body">
        <p><strong>Description:</strong> <%= @badge.description %></p>
        <p><strong>Condition:</strong> <%= @badge.condition %></p>
      </div>
    </div>

    <h4 class="mb-3">Users Who Earned This Badge</h4>
    <% if @badge.user_badges.any? %>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>User</th>
            <th>Awarded At</th>
          </tr>
        </thead>
        <tbody>
          <% @badge.user_badges.each do |ub| %>
            <tr>
              <td><%= link_to ub.user.name, user_path(ub.user) %></td>
              <td><%= ub.awarded_at.strftime("%d/%m/%Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-info">No users have earned this badge yet.</div>
    <% end %>
  <% else %>
    <div class="alert alert-danger">Badge not found.</div>
  <% end %>
</div>
