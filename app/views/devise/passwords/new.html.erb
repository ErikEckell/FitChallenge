<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <div class="card shadow-sm p-4" style="width: 400px;">
    <h3 class="card-title text-center mb-3">Forgot your password?</h3>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% elsif flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <%= f.submit "Send reset instructions", class: "btn btn-warning w-100" %>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Back to Sign In", new_session_path(resource_name), class: "link-primary" %>
    </div>
  </div>
</div>
